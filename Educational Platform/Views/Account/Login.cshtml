@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="mb-4">Login</h2>

    <form asp-action="SaveLogin" method="post" class="shadow p-4 rounded bg-light">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label font-weight-bold"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label font-weight-bold"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3 form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="RememberMe"></label>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <input type="submit" class="btn btn-success btn-lg px-2" value="Login" />
            <a asp-action="Register" class="btn btn-secondary btn-lg">Register</a>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
