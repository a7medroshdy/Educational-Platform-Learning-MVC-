@model Quiz

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this quiz on @ViewBag.CourseName course ?</h3>
<div>
    
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
    </dl>
    
    <form asp-action="ConfirmDelete" asp-route-QuizId="@Model.QuizId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <input type="hidden" name="CourseName" value="@ViewBag.CourseName" />
        <a asp-action="ShowAll" class="btn btn-secondary" asp-route-CourseName="@ViewBag.CourseName">Cancel</a>
    </form>
</div>
