@model IEnumerable<Quiz>

@{
    ViewData["Title"] = "ShowAll";
}

<h1>All Quizzes for @ViewBag.CourseName course </h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-CourseName="@ViewBag.CourseName" asp-route-QuizId="@item.QuizId" class="btn btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-CourseName="@ViewBag.CourseName" asp-route-QuizId="@item.QuizId" class="btn btn-danger">Delete</a>
                <a asp-action="ShowAll" asp-controller="Question" asp-route-QuizName="@item.Title" asp-route-CourseName="@ViewBag.CourseName" class="btn btn-success">View Questions</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-action="Add" asp-route-CourseName="@ViewBag.CourseName" class="btn btn-primary">Add New Quiz</a>
