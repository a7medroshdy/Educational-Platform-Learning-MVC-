@model IdentityRole

<div class="container mt-5">
    <h2 class="mb-4">Delete Role</h2>

    <h4>Are you sure you want to delete this role: <strong>@Model.Name</strong>?</h4>

    <form asp-action="ConfirmDelete" asp-route-RoleId="@Model.Id" method="post" class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <a asp-action="ShowAll" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>
