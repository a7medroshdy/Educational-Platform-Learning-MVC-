@model int

@{
    ViewData["Title"] = "Enrollment";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}


<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEnrollment" asp-route-CourseId="@Model" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label class="control-label"> Student Email</label>
                <input type="email" required name="StudentEmail" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAll" asp-controller="Course">Back to List</a>
</div>

