@model Lesson

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this lesson ?</h3>

<div>
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>

    </dl>
    
    <form asp-action="ConfirmDelete" asp-route-LessonId="@Model.LessonId" method="post">
        <input type="hidden" name="CourseName" value="@ViewBag.CourseName" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="ShowAll" asp-route-CourseName="@ViewBag.CourseName" class="btn btn-secondary">Cancel</a>
    </form>
</div>
